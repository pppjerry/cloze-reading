{
  "manifest_version": 3,
  "name": "cloze-reading",
  "version": "1.0.0",
  "description": "基于LLM把网页正文变成「完型填空」，给阅读增加点摩擦，让你阅读更深刻",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*",
    "https://generativelanguage.googleapis.com/*",
    "https://dashscope.aliyuncs.com/*"
  ],
  "icons": {
    "16": "src/assets/icon/icon-192.png",
    "48": "src/assets/icon/icon-192.png",
    "128": "src/assets/icon/icon-192.png"
  },
  "action": {
    "default_title": "cloze-reading",
    "default_icon": {
      "16": "src/assets/icon/icon-192.png",
      "48": "src/assets/icon/icon-192.png",
      "128": "src/assets/icon/icon-192.png"
    }
  },
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/vendor/readability/Readability.js", "src/content.js"],
      "css": ["src/ui.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/ui.css", "src/vendor/readability/Readability.js", "src/assets/icon/icon-192.png"],
      "matches": ["<all_urls>"]
    }
  ]
}


